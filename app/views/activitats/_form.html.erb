<%= simple_form_for(@activitat) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titol %>
    <%= f.input :subtitol %>
    <%= f.input :descripcio %>
    <%= f.input :lat %>
    <%= f.input :long %>
    <%= f.association :user %>

    <div class="field">
      <%= f.label :cover %>
      <%= f.file_field :cover %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Crear Activitat'%>
  </div>
<% end %>
